<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cebbank.gage.pojo">
    <class name="User" table="user">
        <id name="uid" column="uid">
            <generator class="assigned" />
        </id>
        <property name="uname" type="string" column="uname"/>
        <property name="roleId" type="integer" column="role_id" />
        <property name="password" type="string" column="password" />
        <property name="telephone" type="string" column="telephone" />
        <property name="registerTime" type="timestamp" column="register_time" />
        <property name="roleId" type="integer" column="role_id" />
        <many-to-one name="roleId" class="Role" column="role_id" />  
          
        
        <property name="mail" type="string" column="mail" />
        <property name="name" type="string" column="name" />
        
    </class>

</hibernate-mapping>
